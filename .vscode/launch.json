  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8004"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Makemigrations",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/manage.py",
      "args": ["makemigrations"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Migrate",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/manage.py",
      "args": ["migrate"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Create app",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/manage.py",
      "args": ["startapp", "transactions", "apps/transactions"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Create super user",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/manage.py",
      "args": ["createsuperuser"],
      "django": true,
      "justMyCode": true
    }
  ]
}
